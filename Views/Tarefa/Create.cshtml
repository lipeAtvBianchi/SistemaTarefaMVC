@model sistemaAgendamento.Models.TarefaModel

@{
    ViewData["Title"] = "Criar nova tarefa";
}

<div class="container mt-4">
  <h5 class="mb-3">Nova Tarefa</h5>

  <div class="card shadow-sm">
    <div class="card-body">
      <form asp-action="Create" method="post">

        <div class="mb-3">
          <label asp-for="Titulo" class="form-label">Título</label>
          <input asp-for="Titulo" class="form-control form-control-sm" placeholder="Ex: Finalizar relatório" />
          <span asp-validation-for="Titulo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Descricao" class="form-label">Descrição</label>
          <textarea asp-for="Descricao" class="form-control form-control-sm" rows="3" placeholder="Descreva a tarefa..."></textarea>
          <span asp-validation-for="Descricao" class="text-danger small"></span>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label asp-for="Data" class="form-label">Data</label>
            <input asp-for="Data" type="date" class="form-control form-control-sm" />
            <span asp-validation-for="Data" class="text-danger small"></span>
          </div>
          <div class="form-check mb-3 ms-3">
            <input asp-for="Status" class="form-check-input" type="checkbox" style="width: 1.3em; height: 1.3em; accent-color: #28a745;" />
            <label asp-for="Status" class="form-check-label ms-2">Concluída</label>
            <span asp-validation-for="Status" class="text-danger small"></span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
          <a asp-action="Index" class="btn btn-secondary btn-sm me-2">Cancelar</a>
          <button type="submit" class="btn btn-success btn-sm">Salvar Tarefa</button>
        </div>

      </form>
    </div>
  </div>
</div>