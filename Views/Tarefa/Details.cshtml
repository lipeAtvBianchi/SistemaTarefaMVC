@model sistemaAgendamento.Models.TarefaModel
@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Detalhes da Tarefa</h5>

            <dl class="row">
                <dt class="col-sm-3">Título:</dt>
                <dd class="col-sm-9">@Model.Titulo</dd>

                <dt class="col-sm-3">Descrição:</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Data:</dt>
                <dd class="col-sm-9">@Model.Data.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Status atual:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status ? "bg-success" : "bg-warning text-dark")">
                        @(Model.Status ? "Concluída" : "Pendente")
                    </span>
                </dd>
            </dl>

            <form asp-controller="Tarefa" asp-action="UpdateStatus" method="post" class="mt-3">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="form-check ms-2">
                    <input type="checkbox" class="form-check-input" name="status" value="true" id="status"
                        @(Model.Status ? "checked=\"checked\"" : "") />
                    <label for="status" class="form-check-label">Marcar como Concluída</label>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary btn-sm me-2">Voltar</a>
                    <button type="submit" class="btn btn-success btn-sm">Atualizar Status</button>
                </div>
            </form>

        </div>
    </div>
</div>