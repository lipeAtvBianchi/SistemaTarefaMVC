@model sistemaAgendamento.Models.TarefaModel
@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="container mt-4">
  <h5 class="mb-3">Editar Tarefa</h5>

  <div class="card shadow-sm">
    <div class="card-body">
      <form asp-action="Edit" asp-controller="Tarefa" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
          <label asp-for="Titulo" class="form-label">Título</label>
          <input asp-for="Titulo" class="form-control form-control-sm" />
          <span asp-validation-for="Titulo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Descricao" class="form-label">Descrição</label>
          <textarea asp-for="Descricao" class="form-control form-control-sm" rows="3"></textarea>
          <span asp-validation-for="Descricao" class="text-danger small"></span>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label asp-for="Data" class="form-label">Data</label>
            <input asp-for="Data" type="date" class="form-control form-control-sm" />
            <span asp-validation-for="Data" class="text-danger small"></span>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-check mt-4 ms-2">
              <input asp-for="Status" class="form-check-input" type="checkbox" value="true" />
              <label asp-for="Status" class="form-check-label">Concluída</label>
              <input type="hidden" name="Status" value="false" />
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
          <a asp-action="Index" class="btn btn-secondary btn-sm me-2">Cancelar</a>
          <button type="submit" class="btn btn-success btn-sm">Salvar Alterações</button>
        </div>
      </form>
    </div>
  </div>
</div>